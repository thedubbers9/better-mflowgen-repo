#! /usr/bin/env bash
set -euo pipefail
#=========================================================================
# mflowgen-run
#=========================================================================
# Generator : /afs/ece.cmu.edu/usr/edubbers/private/CODESIGN_PROJ/BETTER_mflowgen/mflowgen/mflowgen/core/build_orchestrator.py

# Pre

rm -f .time_end
date +%Y-%m%d-%H%M-%S > .time_start
MFLOWGEN_STEP_HOME=$PWD
export design_name=mult_16b_flopped

# Commands

mkdir -p $HOME/.calibrewb_workspace/tmp
ins=""; for f in inputs/adk/*.gds*; do ins="$ins -in $f"; done
echo | calibredrv -a layout filemerge \ -indir inputs \ $ins -topcell mult_16b_flopped \ -out design_merged.gds 2>&1 | tee merge.log
mkdir -p outputs && cd outputs
ln -sf ../design_merged.gds

# Post

cd $MFLOWGEN_STEP_HOME
date +%Y-%m%d-%H%M-%S > .time_end

